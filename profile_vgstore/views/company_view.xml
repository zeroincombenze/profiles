                        <field name="django_host" placeholder="Ex: localhost:8000"/>
                        <field name="rest_user" placeholder="admin" />
                        <field name="rest_pass" placeholder="admin" />
                    </group>
                </page>
            </field>
        </record>
    </data>
</openerp>
